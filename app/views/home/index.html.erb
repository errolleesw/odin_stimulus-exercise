<!DOCTYPE html>
<html>
  <head>
    <title>Hello Stimulus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <h1>Hello Stimulus</h1>
    <div data-controller="hello">
      <!-- <h1 data-target="hello.output">Hello, <span data-target="hello.name"></span>!</h1> -->
      <input type="text" data-hello-target="name" placeholder="Enter your name">
      <button data-action="click->hello#greet">Greet</button>
    </div>
    <div data-controller="toggle">
        <button data-action="click->toggle#toggle">Toggle</button>

        <select id='mydropdown' data-toggle-target='dropdown' name="myDropdown">
            <option value="">-- Select an option --</option>
            <option value="option1">Option 1</option>
            <option value="option2">Option 2</option>
            <option value="option3">Option 3</option>
        </select>
    </div>

    <div data-controller="checkbox" data-checkbox-target="checkboxContainer">
        <input type="checkbox" data-action="change->checkbox#highlight" id="checkbox1">
        <label for="checkbox1">Checkbox 1</label>
    </div>

    <div data-controller="checkbox" data-checkbox-target="checkboxContainer">
        <input type="checkbox" data-action="change->checkbox#highlight" id="checkbox2">
        <label for="checkbox2">Checkbox 2</label>
    </div>

    <div data-controller="checkbox" data-checkbox-target="checkboxContainer">
        <input type="checkbox" data-action="change->checkbox#highlight" id="checkbox3">
        <label for="checkbox3">Checkbox 3</label>
    </div>

    <div data-controller="textLimit">
        <label for="tweet">Tweet</label>
        <textarea id="tweet" data-textLimit-target="input" data-action="input->text-limit#checkLimit"></textarea>
        <span data-textLimit-target="message"></span>
    </div>
    </body>
</html>
